<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- Barra fixa no topo -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        app:navigationIcon="@drawable/ico_arrow_back"
        app:navigationContentDescription="@string/button_back"
        app:navigationIconTint="@android:color/white"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ToolbarTitleStyleMain"
                android:layout_marginStart="-25dp"
                android:layout_gravity="center"
                android:text="@string/settings" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Conteúdo principal -->
    <ScrollView
        android:id="@+id/settingsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?attr/colorOnSurfaceVariant"
            android:showDividers="middle">

            <!-- Botão para mudar tema -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangeTheme"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_theme"
                app:icon="@drawable/icon_dark_mode"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Botão para mudar idioma -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangeLanguage"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_language"
                app:icon="@drawable/icon_language"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <!-- Switch para notificações -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_notifications"
                android:checked="true" />

            <!-- Switch para alarmes -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchAlarms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_alarms"
                android:checked="false" />

            <!-- Switch para biometria -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchBiometrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enable_biometrics"
                android:checked="false" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
