<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/about"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:padding="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo -->
            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:contentDescription="@string/image_logo_casasync_description"
                android:src="@drawable/casasyncnome" />

            <!-- Texto sobre o app -->
            <TextView
                android:id="@+id/txtAboutApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="texto aqui"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />

            <!-- Texto sobre o devminds -->
            <TextView
                android:id="@+id/txtAboutDevs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="texto aqui"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginTop="24dp" />

            <!-- DevMinds -->
            <LinearLayout
                android:id="@+id/devsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <!-- Integrante 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtDev1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anthony Rychard"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGithub1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/Ryuki49"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:autoLink="web"
                        android:linksClickable="true"/>
                </LinearLayout>

                <!-- Integrante 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtDev2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alyson Thadeu"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGithub2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/AlysonThadeu"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:autoLink="web"
                        android:linksClickable="true"/>
                </LinearLayout>

                <!-- Integrante 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtDev3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Carlos Santana"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGithub3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/sucsnj"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:autoLink="web"
                        android:linksClickable="true"/>
                </LinearLayout>

                <!-- Integrante 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtDev4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edvan Cordeiro"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGithub4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/Edvan-Junior"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:autoLink="web"
                        android:linksClickable="true"/>
                </LinearLayout>

                <!-- Integrante 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtDev5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rogens Rocha"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtGithub5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="https://github.com/RogensRocha"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:autoLink="web"
                        android:linksClickable="true"/>
                </LinearLayout>


            </LinearLayout>

            <!-- RodapÃ© -->
            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="48dp">

                <ImageView
                    android:id="@+id/imgFooter"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="@string/image_logo_devminds_description"
                    android:src="@drawable/devminds" />

                <TextView
                    android:id="@+id/txtFooter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/text_powered_by_devminds"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
