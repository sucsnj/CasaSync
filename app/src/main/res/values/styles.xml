<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BotaoAzul">
        <item name="android:backgroundTint">@color/azul_escuro</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>
    <style name="BotaoCinza">
        <item name="android:background">?attr/colorSurface</item>
    </style>
    <style name="BotaoAzulClaro">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="iconTint">@android:color/white</item>
    </style>
    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Remove completamente o fundo padrÃ£o -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="ToolbarTitleStyleMain" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>
    <style name="ToolbarSubTitleStyleMain" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/secundary_text_color</item>
    </style>
    <style name="DialogToastAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_scale</item>
        <item name="android:windowExitAnimation">@anim/fade_out_scale</item>
    </style>
    <style name="RoundedIconShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">23%</item>
    </style>
</resources>