<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BotaoAzul">
        <item name="android:backgroundTint">@color/azul_escuro</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="BotaoCinza">
        <item name="android:background">@color/cinza</item>
    </style>
    <style name="BotaoAzulClaro">
        <item name="android:backgroundTint">#2471FF</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="CustomDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Remove completamente o fundo padrÃ£o -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
